#define F_CPU 16000000UL
#include <avr/io.h>
#include <avr/interrupt.h>
#include <util/delay.h>
int main(void)
{
    DDRE = 0xff; // PORTB를 출력으로 설정
	DDRF = 0xff;
    while (1) 
    {
		for(int i=0; i<=1; i++){
			PORTE = (0x01);
			PORTF = ~(0x04<<i);
			
			_delay_ms(1);
			
			PORTE = (0x02);
			PORTF = ~(0x0A<<i);
			
			_delay_ms(1);
			
			PORTE = (0x04);
			PORTF = ~(0x11<<i);
			
			_delay_ms(1);
			
			PORTE = (0x08);
			PORTF = ~(0x1F<<i);
			
			_delay_ms(1);
			
			PORTE = (0x10);
			PORTF = ~(0x11<<i);
			
			_delay_ms(1);
			
			PORTE = (0x20);
			PORTF = ~(0x11<<i);
			
			_delay_ms(1);
			
			PORTE = (0x40);
			PORTF = ~(0x11<<i);
			
			_delay_ms(1);
		}
    }
}

